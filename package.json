{
  "name": "riqra-api",
  "version": "1.0.0",
  "description": "Riqra project",
  "main": "dist/main.js",
  "author": "Edgardo Alvarez",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist && rimraf build",
    "build": "yarn clean && tsc -p tsconfig.build.json",
    "package": "yarn build && rm -rf node_modules && yarn --prod --silent && pkg dist/main.js --output build/main --target=node10-linux-x64 && yarn --silent",
    "deploy": "sh upgrade.sh",
    "image": "yarn package && docker build . -t indqtech/admin-api:latest",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node dist/main.js",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "yarn clean && npm run build",
    "start:prod": "node dist/src/main.js",
    "lint": "eslint --ignore-path .gitignore . --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "pkg": {
    "scripts": "dist/**/*.js"
  },
  "private": true,
  "devDependencies": {
    "@types/algoliasearch": "^3.34.10",
    "@types/argparse": "^1.0.38",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.7",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.1.4",
    "@types/uuid": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.22.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.0.0",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "algoliasearch": "^4.4.0",
    "apollo-server-express": "^2.16.1",
    "argparse": "^1.0.10",
    "bcryptjs": "^2.4.3",
    "chalk": "^3.0.0",
    "cloudinary": "^1.22.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "jwt-simple": "^0.5.6",
    "moment": "^2.24.0",
    "mongoose": "^5.8.7",
    "sequelize": "^6.3.3",
    "winston": "^3.2.1"
  }
}
